{{#each posts as |post| }}
<div class="post flex-col border-4 border-c2 my-6 mx-16">
    <div class="flex justify-between items-center py-3 px-5 bg-c2 text-white">
        <p class="text-3xl font-bold">
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </p>
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
    <div class="bg-white">
        <p class="text-xl text-c4 p-5">
            {{post.content}}
        </p>
    </div>
</div>
{{/each}}